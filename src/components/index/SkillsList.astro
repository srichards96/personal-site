---
import Icon from "astro-icon";

type Props = {
  items: { name: string; logo: string }[];
};

const { items } = Astro.props;
---

<div class="mb-8 grid gap-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
  {
    items.map(({ name, logo }) => (
      <div class="flex items-center gap-4">
        <div class="flex shrink-0 items-center justify-center border rounded-full w-12 h-12 bg-zinc-800 border-zinc-700 overflow-hidden">
          <Icon class="w-6" name={logo} />
        </div>
        <span class="text-xl">{name}</span>
      </div>
    ))
  }
</div>
