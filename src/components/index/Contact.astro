---
import Icon from "astro-icon";

type ContactLink = {
  name: string;
  label: string;
  href: string;
  icon: string;
};

const contactOptions: ContactLink[] = [
  {
    name: "Email",
    label: "scottrichards789@gmail.com",
    href: "mailto:scottrichards789@gmail.com",
    icon: "mdi:email",
  },
  {
    name: "GitHub",
    label: "https://github.com/srichards96",
    href: "https://github.com/srichards96",
    icon: "mdi:github",
  },
  {
    name: "LinkedIn",
    label: "https://www.linkedin.com/in/scott-richards-compsci",
    href: "https://www.linkedin.com/in/scott-richards-compsci",
    icon: "mdi:linkedin",
  },
];
---

<section id="contact" class="pt-[96px] mt-[-96px] sm:pt-[64px] sm:mt-[-64px]">
  <div class="container-narrow mx-auto p-4">
    <h1 class="text-2xl sm:text-4xl mb-4">Contact</h1>

    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {
        contactOptions.map(({ name, label, href, icon }) => (
          <a
            href={href}
            class="inline-flex flex-col items-center p-4 text-center bg-zinc-800 border border-zinc-700 rounded hover:bg-zinc-700"
            target="_blank"
          >
            <div class="flex gap-4 items-center">
              <Icon name={icon} class="w-16" />
              <h2 class="text-xl sm:text-2xl">{name}</h2>
            </div>
            <span>{label}</span>
          </a>
        ))
      }
    </div>
  </div>
</section>
