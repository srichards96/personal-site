---
type HeaderLink = {
  href: string;
  label: string;
};

const headerLinks: HeaderLink[] = [
  { href: "#skills", label: "Skills" },
  { href: "#projects", label: "Projects" },
  // { href: "#about", label: "About" },
  { href: "#contact", label: "Contact" },
];
---

<header class="sticky top-0">
  <nav class="bg-black bg-opacity-80 text-white backdrop-blur-sm">
    <div
      class="h-full flex-col sm:flex-row container-narrow mx-auto p-4 flex gap-4 justify-between items-center"
    >
      <a href="#" class="text-2xl font-bold text-purple-500 h-min"
        >Scott Richards
      </a>

      <div class="inline-flex gap-4 items-center">
        {
          headerLinks.map(({ href, label }) => (
            <a href={href} class="text-lg hover:underline focus:underline">
              {label}
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>
